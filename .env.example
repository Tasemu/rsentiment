NODE_ENV=development
LOG_LEVEL=info

GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=europe-west2
PUBSUB_RAW_POSTS_TOPIC=raw-posts
PUBSUB_RAW_POSTS_SUBSCRIPTION=raw-posts-sub
PUBSUB_DLQ_TOPIC=raw-posts-dlq
# INGESTER_SOURCE=reddit uses official Reddit API credentials.
# INGESTER_SOURCE=mock uses local mock payloads and does not require Reddit credentials.
INGESTER_SOURCE=reddit

DATABASE_URL=postgres://postgres:postgres@localhost:5432/rsentiment

REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=rsentiment/0.1.0
INGESTER_BACKFILL_DAYS=3

VERTEX_MODEL=gemini-1.5-flash

PORT=8080
