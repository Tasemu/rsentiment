{
  "name": "@rsentiment/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "node -e \"console.log('lint not configured for @rsentiment/db')\"",
    "test": "node -e \"console.log('no tests yet for @rsentiment/db')\"",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:rollback": "node -e \"console.error('Drizzle does not provide automatic down migrations. Add a corrective migration instead.'); process.exit(1);\"",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "db:seed": "tsx seed/subreddits.ts"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.7"
  }
}
